!!! 5
%html
  %head
    %meta{:charset => "utf-8"}
    %meta{"http-equiv" => 'Content-Type', :content => 'text/html'}
    %meta{"http-equiv" => "X-UA-Compatible", :content => "IE=edge, chrome=1"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1"}

    %link{:rel => "shortcut icon", :href => "images/favicon.ico", :type => "image/x-icon"}
    %link{:rel => "image_src", :href => "images/apple-touch-icon-iphone4.png"}
    %link{:rel => "apple-touch-icon", :href => "images/apple-touch-icon-iphone.png"}
    %link{:rel => "apple-touch-icon", :sizes => "72x72", :href => "images/apple-touch-icon-ipad.png"}
    %link{:rel => "apple-touch-icon", :sizes => "114x114", :href => "images/apple-touch-icon-iphone4.png"}

    %title= page_title

    = javascript_include_tag 'https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js'
    = javascript_include_tag 'app'

    = stylesheet_link_tag("style.css")
    = yield_content :head

  %body{:class => page_classes}
    = partial "layouts/partials/header_landing"
    = partial "layouts/partials/pitch"
    #page.container
      %h1= title
      %section{:role => "main"}
        = yield
    = partial "layouts/partials/footer"
    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-474703-12']);
      _gaq.push(['_trackPageview']);
      (function() {
        var ga = document.createElement('script');
        ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
